<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/countIter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Ход: "
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fab_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#737373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_undo_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fab_box"
        app:layout_constraintTop_toTopOf="@+id/fab_box"
        app:layout_constraintLeft_toLeftOf="@+id/fab_box"
        app:layout_constraintRight_toRightOf="@+id/fab_box" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#737373"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fab_box"
        app:layout_constraintTop_toTopOf="@id/fab_box" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="26dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toTopOf="@id/fab_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/countIter">

        <TextView
            android:id="@+id/num_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:textColor="@color/colorTextGray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F13151"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintHorizontal_weight="12"
            app:layout_constraintLeft_toRightOf="@id/num_0"
            app:layout_constraintRight_toLeftOf="@id/linearLayout6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <TextView
                android:id="@+id/num_1_12"
                style="@style/Button"
                android:background="@drawable/button"
                android:textColor="@color/colorTextGray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_13_24"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_25_36"
                style="@style/Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#2FFF51"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintLeft_toLeftOf="@id/linearLayout2"
            app:layout_constraintRight_toRightOf="@id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/num_3"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_6"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_9"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_12"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_15"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_18"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_21"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_24"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_27"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_30"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_33"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_36"
                style="@style/Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#2131FF"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintLeft_toLeftOf="@id/linearLayout2"
            app:layout_constraintRight_toRightOf="@id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/num_2"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_5"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_8"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_11"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_14"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_17"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_20"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_23"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_26"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_29"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_32"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_35"
                style="@style/Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FF44FF"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintLeft_toLeftOf="@id/linearLayout2"
            app:layout_constraintRight_toRightOf="@id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/num_1"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_4"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_7"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_10"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_13"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_16"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_19"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_22"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_25"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_28"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_31"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_34"
                style="@style/Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#41ffF1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/linearLayout2"
            app:layout_constraintRight_toRightOf="@id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:id="@+id/num_1_18"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_even"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_red"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_black"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_not_even"
                style="@style/Button" />

            <TextView
                android:id="@+id/num_19_36"
                style="@style/Button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F1ff59"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/linearLayout2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

            <TextView
                android:id="@+id/num_1st"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_2nd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_3rd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/field_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/field_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/field_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/field_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout5"
            android:visibility="gone" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>